pid file        = /var/run/rsyncd.pid
uid             = nobody
gid             = nogroup

[<%= @moduleName %>]
    use chroot          = no
    read only           = yes
    transfer logging    = yes
    <% if @ca_server -%>
    path                = <%= @modulePath %>
    <% else -%>
    path                = <%= @modulePath %>/latest
    <% end -%>
    comment             = <%= @moduleDescription %>

